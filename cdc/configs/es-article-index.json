{
  "settings": {
    "number_of_shards": 2,
    "analysis": {
      "analyzer": {
        "article_title": {
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "id": { "type": "integer" },
        "slug": { "type": "keyword" },
        "title": {
          "type": "text",
          "analyzer": "article_title"
        },
        "description": { "type": "text" },
        "created": { "type": "date" },
        "updated": { "type": "date" },
        "readingTime": { "type": "float" },
        "tagList": {
          "type": "keyword"
        },
        "author": {
          "type": "nested",
          "properties": {
            "id": { "type": "integer" }
          }
        },
        "favoriteCount": { "type": "integer" },
        "commentCount": { "type": "integer" }
      }
    }
  }
}
